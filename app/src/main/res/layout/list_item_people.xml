<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardRow"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/created_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/label_name"
                android:textAppearance="@style/TitleText"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/created_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/label_height"
                android:textAppearance="@style/TitleText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/created_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/label_mass"
                android:textAppearance="@style/TitleText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/created_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/label_created"
                android:textAppearance="@style/TitleText"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/people_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="@style/TitleText"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/people_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="@style/TitleText"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/people_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="@style/TitleText"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/people_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="@style/TitleText"
                android:textStyle="normal" />
        </LinearLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>