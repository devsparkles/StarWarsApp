<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CardRow">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="cardElevation">6dp</item>
    </style>


    <style name="TitleText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">normal</item>
    </style>


    <style name="BiggerText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="BodyText" parent="TextAppearance.AppCompat.Body1" />


</resources>